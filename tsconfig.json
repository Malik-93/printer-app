{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "baseUrl": "./",
        "resolveJsonModule": true,
        "jsx": "react",
        "sourceMap": true,
        "removeComments": false,
        "noImplicitAny": false
    },
    "include": [
    "./**/*.ts",
    "./index.html"
    ],
    "exclude": [
        "./**/*.test.ts",
        "node_modules"
    ],
}